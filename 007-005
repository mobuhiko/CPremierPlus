#include <stdio.h>

int main(void) {

	int ch = 0;
	int count_change = 0;

	while ((ch = getchar()) != '#') {
		switch (ch)
		{
		case '.':
			putchar('!');
			count_change++;
			break;
		case '!':
			putchar('!');
			putchar('!');
			count_change++;
			break;
		default:
			putchar(ch);
			break;
		}
	}
	putchar('\n');
	printf("Change %d times.\n", count_change);

	return 0;
}
