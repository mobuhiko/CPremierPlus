#include <stdio.h>

int main(void) {
	
	float speed; // Mb/s
	float size; //MB
	printf("enter the speed (Mb/s).\n");
	scanf("%f", &speed);
	printf("Enter the size of the file (MB).\n");
	scanf("%f", &size);
	printf("At %.2f megabits per second, a file of %.2f megabytes\n", speed, size);
	printf("downloads in %.2f seconds.\n", size * 8 / speed);

	return 0;
}
